[build]
command = "npm install && npm run build"
publish = "dist/public"

[[services]]
name = "nodejs-server"
[services.build]
command = "npm install && npm run build"
[services.start]
command = "npm start"
[services.env]
NODE_ENV = "production"
PORT = "3000"

[[services]]
name = "python-backend"
[services.build]
command = "cd python_backend && pip install -r requirements.txt"
[services.start]
command = "cd python_backend && gunicorn app:app --bind 0.0.0.0:$PORT"
[services.env]
FLASK_APP = "app.py"
FLASK_ENV = "production"

